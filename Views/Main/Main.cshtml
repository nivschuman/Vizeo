@model VideoProject.Models.UserModel

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Vizeo</title>

        <style>
            body {
                font-family: Arial, sans-serif;
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
                background-color: #f5f5f5;
            }

            .container {
                display: flex;
                justify-content: space-between;
                width: 80%;
                max-width: 1000px;
                padding: 20px;
                background-color: #fff;
                border-radius: 8px;
                box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            }

            .column {
                flex-basis: 48%; /* Adjust as needed to leave space between columns */
            }

            .video-wrapper {
                margin-bottom: 20px;
            }

            video {
                width: 100%;
                border-radius: 8px;
            }

            .info-container {
                text-align: center;
            }

            .info-input {
                width: 80%;
                padding: 10px;
                box-sizing: border-box;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 14px;
                margin-bottom: 10px;
            }

            .info-item {
                margin-bottom: 10px;
            }

            .info-label {
                font-weight: bold;
            }

            .checkbox-label {
                display: block;
                margin-bottom: 5px;
            }

            button {
                padding: 10px 20px;
                margin-top: 10px;
                background-color: #007bff;
                color: #fff;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                font-size: 16px;
            }

            button:hover {
                background-color: #0056b3;
            }
        </style>
    </head>
    <body>
        <div class="container">
        <div class="column">
            <div class="video-wrapper">
                <video autoplay id="my-video"></video>
            </div>
            <div class="info-container">
                 <div class="info-item">
                    <span class="info-label">My name:</span>
                    <input type="text" id="myNameInput" class="info-input" placeholder="Enter name">
                </div>
                <div class="info-item">
                    <span class="info-label">I live in:</span>
                    <input type="text" id="myCountryInput" class="info-input" placeholder="Enter country">
                </div>
                <div class="info-item">
                    <span class="info-label">My age:</span>
                    <input type="text" id="myAgeInput" class="info-input" placeholder="Enter age">
                </div>
                <div class="info-item">
                    <span class="info-label">I am interested in:</span>
                    <label class="checkbox-label">
                        <input type="checkbox" id="sameCountryCheckbox">
                        Same country
                    </label>
                    <label class="checkbox-label">
                        <input type="checkbox" id="boysCheckbox">
                        Boys
                    </label>
                    <label class="checkbox-label">
                        <input type="checkbox" id="girlsCheckbox">
                        Girls
                    </label>
                </div>
                <div class="info-item">
                    <button type="button" class="btn btn-success" id="goButton">Go!</button>
                    <button type="button" class="btn btn-danger" id="stopButton">Stop!</button>
                </div>
                <!-- Additional info fields for Person 1 can go here -->
            </div>
        </div>
        <div class="column">
            <div class="video-wrapper">
                <video autoplay id="peer-video"></video>
            </div>
            <div class="info-container">
                <div class="info-item">
                    <span class="info-label">Name:</span> <span id="name2">Name</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Living in:</span> <span id="country2">Country</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Age:</span> <span id="age2">Age</span>
                </div>
                <div class="info-item">
                    <button type="button" class="btn btn-warning" id="reportButton">Report</button>
                    <button type="button" class="btn btn-info" id="likeButton">Like</button>
                </div>
                <!-- Additional info fields for Person 2 can go here -->
            </div>
        </div>
    </div>
   </body>
</html>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
<script src="~/js/Main.js"></script>
            }

            video {
                width: 100%;
                border-radius: 8px;
            }

            .info-container {
                text-align: center;
            }

            .info-input {
                width: 80%;
                padding: 10px;
                box-sizing: border-box;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 14px;
                margin-bottom: 10px;
            }

            .info-item {
                margin-bottom: 10px;
                display: flex;
                align-items: center;
            }

            .info-label {
                font-weight: bold;
                margin-right: 10px;
                width: 80px; /* Adjust width as needed */
                text-align: right;
            }

            .form-control {
                width: calc(100% - 90px); /* Adjust width to leave space for label */
                padding: 10px;
                box-sizing: border-box;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 14px;
            }

            .checkbox-label {
                display: block;
                margin-bottom: 5px;
                margin-right: 5px;
            }

            .radio-label {
                display: block;
                margin-bottom: 5px;
                margin-right: 5px;
            }

            button {
                padding: 10px 20px;
                margin-top: 10px;
                background-color: #007bff;
                color: #fff;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                font-size: 16px;
            }

            button:hover {

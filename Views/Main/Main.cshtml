                justify-content: space-between;
                width: 80%;
                max-width: 1000px;
                padding: 20px;
                background-color: #fff;
                border-radius: 8px;
                box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            }

            .column {
                flex-basis: 48%; /* Adjust as needed to leave space between columns */
            }

            .video-wrapper {
